{
    "name": "free-browser",
    "version": "1.0.0",
    "description": "A private desktop browser shell.",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-builder",
        "build:web": "vite build",
        "preview": "vite preview",
        "electron:dev": "set ELECTRON_RUN_AS_NODE=&& npx electron . --no-sandbox"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "electron": "^40.6.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "vite": "^5.1.4"
    },
    "build": {
        "appId": "com.free.browser",
        "productName": "Free Browser",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                "portable"
            ]
        }
    }
}